{
	"openapi": "3.0.0",
	"info": {
		"description": "This is the API documentation for Aplicar: Cover Letter Generator",
		"version": "1.0.0",
		"title": "Cover Letter Generator API",
		"contact": {
			"email": "ogubuikealex@gmail.com"
		},
		"license": {
			"name": "Apache 2.0",
			"url": "http://www.apache.org/licenses/LICENSE-2.0.html"
		}
	},
	"servers": [
		{
			"url": "http://localhost:5001",
			"description": "Local"
		}
	],
	"schemes": ["http"],
	"host": "localhost:3080",
	"basePath": "/api",
	"tags": [
		{
			"name": "authentication",
			"description": "Holds endpoints related to authentication"
		},
		{
			"name": "coverLetter",
			"description": "Holds endpoints related to cover letter"
		}
	],

	"paths": {
		"/api/v1/auth/signup": {
			"post": {
				"summary": "Adds a new user to the platformSave the task",
				"tags": ["authentication"],
				"description": "Signs up a user",
				"produces": ["application/json"],
				"consumes": ["application/json"],
				"parameters": [],
				"requestBody": {
					"content": {
						"application/json": {
							"$ref": "#/definitions/User"
						}
					}
				},
				"responses": {
					"201": {
						"description": "Successful Signup",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					},
					"400": {
						"description": "Email Already Exist",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					},
					"500": {
						"description": "Internal Server Error",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					}
				}
			}
		},
		"/api/v1/upload": {
			"post": {
				"summary": "Upload CV",
				"tags": ["coverLetter"],
				"description": "Uploads a user's CV",
				"requestBody": {
					"required": true,
					"content": {
						"multipart/form-data": {
							"schema": {
								"type": "object",
								"properties": {
									"myFile": {
										"type": "string",
										"format": "binary"
									}
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Successful Upload",
						"schema": {
							"type": "string"
						}
					},
					"400": {
						"description": "You must upload a PDF file",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					}
				}
			}
		},
		"/api/v1/generate": {
			"post": {
				"summary": "Generate Cover Letter",
				"tags": ["coverLetter"],
				"description": "Generates a Cover Letter from GPT3",
				"consumes": ["application/json"],
				"requestBody": {
					"required": true,
					"content": {
						"multipart/form-data": {
							"schema": {
								"type": "object",
								"properties": {
									"myFile": {
										"type": "string",
										"format": "binary"
									},
									"companyName": { "type": "string" },
									"companyAddress": { "type": "string" },
									"city": { "type": "string" },
									"role": { "type": "string" },
									"yearsOfExperience": { "type": "string" },
									"recipientName": { "type": "string" },
									"recipientDepartment": { "type": "string" },
									"receipientEmail": { "type": "string" },
									"receipientPhoneNo": { "type": "string" }
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Ok",
						"schema": {
							"type": "object",
							"properties": {
								"coverLetter": { "type": "string" },
								"companyName": { "type": "string" },
								"companyAddress": { "type": "string" },
								"city": { "type": "string" },
								"country": { "type": "string" },
								"role": { "type": "string" },
								"date": { "type": "string" },
								"yearsOfExperience": { "type": "string" },
								"recipientName": { "type": "string" },
								"recipientDepartment": { "type": "string" },
								"receipientEmail": { "type": "string" },
								"receipientPhoneNo": { "type": "string" }
							}
						}
					},
					"400": {
						"description": "Bad Request",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					},
					"500": {
						"description": "Internal Server Error",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					}
				}
			}
		},
		"/api/v1/template": {
			"get": {
				"summary": "Get all Cover Letters Generated By A User",
				"tags": ["coverLetter"],
				"description": "Get all Cover Letters Generated By A User",
				"produces": ["application/json"],
				"parameters": [],
				"responses": {
					"200": {
						"description": "successful operation",
						"schema": {
							"type": "object",
							"properties": {
								"message": { "type": "string" },
								"data": "string"
							}
						}
					},
					"500": {
						"description": "Internal Server Error",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					},
					"404": {
						"description": "Template Does Not Exist",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					}
				}
			}
		},
		"/api/v1/template/{id}": {
			"patch": {
				"summary": "Edit a cover letter",
				"tags": ["coverLetter"],
				"description": "Edit a cover letter",
				"produces": ["application/json"],
				"parameters": [],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"id": {
										"description": "cover letter id that needs to be updated",
										"required": true,
										"type": "string"
									},
									"body": {
										"description": "content that needs to be updated",
										"required": true,
										"schema": {
											"type": "object",
											"properties": {
												"template": {
													"type": "object"
												}
											}
										}
									}
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "successful operation",
						"schema": {
							"type": "object",
							"properties": {
								"message": { "type": "string" },
								"data": "string"
							}
						}
					},
					"400": {
						"description": "Invalid status value",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					}
				}
			}
		},
		"/api/v1/auth/verify": {
			"post": {
				"summary": "Verifies a new user",
				"tags": ["authentication"],
				"description": "Verifies a user",
				"produces": ["application/json"],
				"consumes": ["application/json"],
				"parameters": [],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"otp": {
										"type": "string"
									}
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Ok: User has been successfully verified",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					},
					"400": {
						"description": "Bad Request: Verification failed",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					}
				}
			}
		},
		"/api/v1/auth/login": {
			"post": {
				"summary": "Log's in an existing user",
				"tags": ["authentication"],
				"description": "Logs in a user",
				"produces": ["application/json"],
				"consumes": ["application/json"],
				"parameters": [],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"email": {
										"type": "string"
									},
									"password": {
										"type": "string"
									}
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Ok: Success",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					},
					"400": {
						"description": "Bad Request: Invalid email or password",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					}
				}
			}
		},
		"/api/v1/auth/updatePassword": {
			"put": {
				"summary": "Updates a user's password",
				"description": "Updates a user's password",
				"tags": ["authentication"],
				"consumes": ["application/json"],
				"parameters": [],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"oldPassword": {
										"type": "string"
									},
									"password": {
										"type": "string"
									},
									"confirmPassword": {
										"type": "string"
									}
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Ok: Password has been reset",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					},
					"400": {
						"description": "Bad Request: Please Enter Your Correct Old Password",
						"schema": {
							"$ref": "#/definitions/Response"
						}
					}
				}
			}
		}
	},
	"definitions": {
		"User": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"email": {
					"type": "string"
				},
				"password": {
					"type": "string"
				}
			}
		},
		"Response": {
			"type": "object",
			"properties": {
				"statusCode": {
					"type": "string"
				},
				"message": {
					"type": "string"
				}
			}
		}
	}
}
