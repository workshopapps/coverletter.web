{
	"openapi": "3.0.0",
	"info": {
		"description": "This is the API documentation for Aplicar: Cover Letter Generator",
		"version": "1.0.0",
		"title": "Cover Letter Generator API",
		"contact": {
			"email": "ogubuikealex@gmail.com"
		},
		"license": {
			"name": "Apache 2.0",
			"url": "http://www.apache.org/licenses/LICENSE-2.0.html"
		}
	},
	"servers": [
		{
			"url": "http://localhost:5001",
			"description": "Local"
		}
	],
	"schemes": ["http"],
	"host": "localhost:3080",
	"basePath": "/api",
	"paths": {
		"/signup": {
			"post": {
				"summary": "Adds a new user to the platformSave the task",
				"description": "Signs up a user",
				"produces": ["application/json"],
				"consumes": ["application/json"],
				"parameters": [
					{
						"in": "body",
						"name": "body",
						"description": "user object",
						"required": true,
						"schema": {
							"type": "object",
							"properties": {
								"user": {
									"type": "object",
									"$ref": "#/definitions/User"
								}
							}
						}
					}
				],
				"responses": {
					"200": {
						"description": "Successful Signup",
						"schema": {
							"type": "string"
						}
					},
					"400": {
						"description": "Email Already Exist",
						"schema": {
							"$ref": "#/definitions/InvalidResponse"
						}
					}
				}
			}
		},
		"/api/v1/upload": {
			"post": {
				"summary": "Upload CV",
				"description": "Uploads a user's CV",
				"requestBody": {
					"required": true,
					"content": {
						"multipart/form-data": {
							"schema": {
								"type": "object",
								"properties": {
									"media": {
										"type": "string",
										"format": "binary"
									}
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Successful Upload",
						"schema": {
							"type": "string"
						}
					},
					"400": {
						"description": "You must upload a PDF file",
						"schema": {
							"$ref": "#/definitions/InvalidResponse"
						}
					}
				}
			}
		},
		"/api/v1/generate": {
			"post": {
				"summary": "Generate Cover Letter",
				"description": "Generates a Cover Letter from GPT3",
				"consumes": ["application/json"],
				"requestBody": {
					"required": true,
					"content": {
						"multipart/form-data": {
							"schema": {
								"type": "object",
								"properties": {
									"media": {
										"type": "string",
										"format": "binary"
									}
								}
							}
						}
					}
				},
				"parameters": [
					{
						"in": "body",
						"name": "body",
						"description": "user object",
						"required": true,
						"schema": {
							"type": "object",
							"properties": {
								"companyName": { "type": "string" },
								"companyAddress": { "type": "string" },
								"city": { "type": "string" },
								"role": { "type": "string" },
								"yearsOfExperience": { "type": "string" },
								"recipientName": { "type": "string" },
								"recipientDepartment": { "type": "string" },
								"receipientEmail": { "type": "string" },
								"receipientPhoneNo": { "type": "string" }
							}
						}
					}
				],
				"responses": {
					"200": {
						"description": "Ok",
						"schema": {
							"type": "object",
							"properties": {
								"coverLetter": { "type": "string" },
								"companyName": { "type": "string" },
								"companyAddress": { "type": "string" },
								"city": { "type": "string" },
								"country": { "type": "string" },
								"role": { "type": "string" },
								"date": { "type": "string" },
								"yearsOfExperience": { "type": "string" },
								"recipientName": { "type": "string" },
								"recipientDepartment": { "type": "string" },
								"receipientEmail": { "type": "string" },
								"receipientPhoneNo": { "type": "string" }
							}
						}
					},
					"400": {
						"description": "Bad Request",
						"schema": {
							"$ref": "#/definitions/InvalidResponse"
						}
					},
					"500": {
						"description": "Internal Server Error",
						"schema": {
							"$ref": "#/definitions/InvalidResponse"
						}
					}
				}
			}
		},
		"/template": {
			"get": {
				"summary": "Get all Cover Letters Generated By A User",
				"description": "Get all Cover Letters Generated By A User",
				"produces": ["application/json"],
				"parameters": [],
				"responses": {
					"200": {
						"description": "successful operation",
						"schema": {
							"type": "object",
							"properties": {
								"message": { "type": "string" },
								"data": "string"
							}
						}
					},
					"500": {
						"description": "Internal Server Error",
						"schema": {
							"$ref": "#/definitions/InvalidResponse"
						}
					},
					"404": {
						"description": "Template Does Not Exist",
						"schema": {
							"$ref": "#/definitions/InvalidResponse"
						}
					}
				}
			}
		},
		"/template/{id}": {
			"patch": {
				"summary": "Edit a cover letter",
				"description": "Edit a cover letter",
				"produces": ["application/json"],
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"description": "cover letter id that needs to be deleted",
						"required": true,
						"type": "string"
					},
					{
						"in": "body",
						"name": "body",
						"description": "template object",
						"required": true,
						"schema": {
							"type": "object",
							"properties": {
								"template": {
									"type": "object"
								}
							}
						}
					}
				],
				"responses": {
					"200": {
						"description": "successful operation",
						"schema": {
							"type": "object",
							"properties": {
								"message": { "type": "string" },
								"data": "string"
							}
						}
					},
					"400": {
						"description": "Invalid status value",
						"schema": {
							"$ref": "#/definitions/InvalidResponse"
						}
					}
				}
			}
		}
	},
	"definitions": {
		"User": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"email": {
					"type": "string"
				},
				"password": {
					"type": "string"
				}
			}
		},
		"InvalidResponse": {
			"type": "object",
			"properties": {
				"statusCode": {
					"type": "string"
				},
				"message": {
					"type": "string"
				}
			}
		}
	}
}
